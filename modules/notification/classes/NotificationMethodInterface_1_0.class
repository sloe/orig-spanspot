/**
 * This is an interface for alternative notification methods for the notification module.
 * @package Notification
 * @subpackage Classes
 * @author Zimzat <zimzat@zimzat.com>
 * @version $Revision: 847 $
 * @abstract
 */
class NotificationMethodInterface_1_0 {

    /**
     * Return the translation domain to use. (eg. pluginType . 's_' . pluginId)
     *
     * @return string Translation Domain
     */
    function getTranslationDomain() {
	return 'modules_notification';
    }

    /**
     * Return the name of the method.
     *
     * @return string Name of method
     */
    function getName() {
	global $gallery;
	return $gallery->i18n('Unimplemented');
    }

    /**
     * Return the description of the method.
     *
     * @return string Description of method
     */
    function getDescription() {
	global $gallery;
	return $gallery->i18n('Unimplemented');
    }

    /**
     * Send out a notification to the users.
     *
     * @param array $userIds array(userId, ...)
     * @param string $shortMessage short notification message
     * @param string $longMessage long notification message
     * @return array array(object GalleryStatus a status code,
     *                     array('userId' => object GalleryStatus a status code, ...))
     */
    function sendNotification($userIds, $shortMessage, $longMessage) {
	return array(GalleryCoreApi::error(ERROR_UNIMPLEMENTED), null);
    }
}
